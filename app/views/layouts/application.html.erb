<!DOCTYPE html>
<html>
<head>
  <title>CharityHub</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <script>
    Stripe.setPublishableKey("<%= ENV['STRIPE_AUTH_TOKEN'] %>");
  </script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default">
    <div class="container-fluid">
      <% if user_signed_in? %>
        Logged in as <strong><%= current_user.email %></strong>.
        <%= link_to 'Edit profile', edit_user_registration_path, :class => "black" %> |
        <%= link_to "Logout", destroy_user_session_path, :class => "black", method: :delete %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => "black" %> |
        <%= link_to "Login", new_user_session_path, :class => "black" %>
      <% end %>
      | <%= link_to "Home Page", root_path, :class => "black" %>
    </div>
  </div>

<div class="container">
<%= flash[:notice] %>
<%= flash[:alert] %>

<%= yield %>
</div>
</body>
</html>
